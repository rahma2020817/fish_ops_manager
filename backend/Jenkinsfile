pipeline {
    agent any
    def app
    environment {
        DOCKER_IMAGE = "beddi006/backend:${env.BUILD_NUMBER}"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    app = docker.build("beddi006/backend", "-f ./backend/")
                    // sh "docker build -t ${DOCKER_IMAGE} ./backend/"
                }
            }
        }
        
        stage('Push image') {
            steps {
                script {
                   // docker.withRegistry('https://docker.io', 'dockerhub') {
                   //      sh "docker tag ${DOCKER_IMAGE} beddi006/backend:${env.BUILD_NUMBER}"
                   //      sh "docker push beddi006/backend:${env.BUILD_NUMBER}"
                   //  }
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
                      sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
                      sh 'docker push shanem/spring-petclinic:latest'
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploy the application...'
            }
        }
    }
}
