pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        DOCKER_IMAGE = "beddi006/backend:${env.BUILD_NUMBER}"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    // Construire l'image Docker et taguer avec BUILD_NUMBER
                    sh "docker build -t ${DOCKER_IMAGE} ./backend/"
                }
            }
        }
         stage('Login to DockerHub') {
            steps {
                script {
                    // Se connecter à DockerHub pour vérifier les informations d'identification
                    sh "echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin"
                }
            }
        }
        stage('Push image') {
            steps {
                script {
                        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub'){
                            sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploy the application...'
                // Ajoutez vos étapes de déploiement ici
            }
        }
    }
}
