pipeline {
    def app
    agent any
    stages {
        stage('Build') {
            steps {
               docker build -t beddi006/backend:${env.BUILD_NUMBER} ./backend/
            }
        }
        stage('Push image') {
            
            docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                docker push beddi006/backend:${env.BUILD_NUMBER}
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy the application...'
            }
        }
    }
}
