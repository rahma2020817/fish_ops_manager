pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        DOCKER_IMAGE = "beddi006/backend:${env.BUILD_NUMBER}"
        ANSIBLE_PATH = "/usr/bin/ansible-playbook" // Mettez à jour avec le chemin correct
    }

    stages {
        stage('Docker Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Build & Push Docker Image with Ansible') {
            steps {
                script {
                    dir('backend') {
                        sh """
                        pwd
                        ls -l
                        ${ANSIBLE_PATH} ansible-playbook.yml -e BUILD_NUMBER=${env.BUILD_NUMBER}
                        """
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Déployer l\'application...'
            }
        }
    }
}
