pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub') // Assurez-vous que ces identifiants sont correctement configurés dans Jenkins
        DOCKER_IMAGE = "beddi006/backend:${env.BUILD_NUMBER}"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Utilisation de 'node' pour garantir le bon contexte
                    node {
                        sh "docker build -t ${DOCKER_IMAGE} ./backend/"
                    }
                }
            }
        }

        stage('Login to DockerHub') {
            steps {
                script {
                    // Utilisation de 'node' pour garantir le bon contexte
                    node {
                        // Connexion à DockerHub
                        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                    }
                }
            }
        }

        stage('Tag and Push Docker Image') {
            steps {
                script {
                    // Utilisation de 'node' pour garantir le bon contexte
                    node {
                        // Taguer l'image
                        sh "docker tag ${DOCKER_IMAGE} beddi006/backend:${env.BUILD_NUMBER}"
                        
                        // Pousser l'image sur DockerHub
                        sh "docker push beddi006/backend:${env.BUILD_NUMBER}"
                    }
                }
            }
        }
    }

    post {
        failure {
            script {
                // Utilisation de 'node' pour garantir le bon contexte en cas d'échec
                node {
                    echo 'Pipeline failed. Debugging information:'
                    sh 'docker info'
                }
            }
        }
    }
}
