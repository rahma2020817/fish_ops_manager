pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                script {
                    // Construire l'image Docker et taguer avec BUILD_NUMBER
                    sh 'docker build -t backend:$BUILD_NUMBER ./backend/'
                }
            }
        }
        
        stage('Push image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                        // Pousser l'image Docker vers Docker Hub
                        sh 'docker push beddi006/backend:$BUILD_NUMBER'
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploy the application...'
                // Ajoutez vos étapes de déploiement ici
            }
        }
    }
}
