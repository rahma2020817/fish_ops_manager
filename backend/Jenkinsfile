pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub') // Ensure these credentials are correctly configured in Jenkins
        DOCKER_IMAGE = "beddi006/backend:${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "Checking out code from repository"
                }
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image: ${DOCKER_IMAGE}"
                    sh "docker build -t ${DOCKER_IMAGE} ./backend/"
                }
            }
        }

        stage('Login to DockerHub') {
            steps {
                script {
                    echo "Logging in to DockerHub"
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                }
            }
        }

        stage('Tag and Push Docker Image') {
            steps {
                script {
                    echo "Tagging Docker image: ${DOCKER_IMAGE}"
                    sh "docker tag ${DOCKER_IMAGE} beddi006/backend:${env.BUILD_NUMBER}"
                    
                    echo "Pushing Docker image: beddi006/backend:${env.BUILD_NUMBER}"
                    sh "docker push beddi006/backend:${env.BUILD_NUMBER}"
                }
            }
        }
    }
    
    post {
        success {
            echo "Docker image successfully pushed: beddi006/backend:${env.BUILD_NUMBER}"
        }
        failure {
            script {
                echo "Pipeline failed. Debugging information:"
                try {
                    sh 'docker --version'
                    sh 'docker images'
                    sh 'docker ps -a'
                } catch (Exception e) {
                    echo "Failed to retrieve Docker debug information: ${e.getMessage()}"
                }
            }
        }
    }
}
