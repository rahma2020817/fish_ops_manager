pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "beddi006/backend:${env.BUILD_NUMBER}"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE} ./backend/"
                }
            }
        }
        
        stage('Push image') {
            steps {
                script {
                   docker.withRegistry('docker.io', 'dockerhub') {
                        sh "docker tag ${DOCKER_IMAGE} beddi006/backend:${env.BUILD_NUMBER}"
                        sh "docker push beddi006/backend:${env.BUILD_NUMBER}"
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploy the application...'
            }
        }
    }
}
